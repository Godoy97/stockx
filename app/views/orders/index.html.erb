<div class="container">
  <% @orders.each do |order| %>
          <div class="container d-flex justify-content-center py-5">
            <ul class="card_products" style="list-style-type: none;">
              <li class>
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <img src="" class="card-img-top" alt="">
                    <h5 class="card-title"><%= link_to "Numero de orden: #{order.id}", order_path(order), class:"text-decoration-none" %></h5>
                    <p class="card-text"><%= "Comentarios: #{order.comment}" %></p>
                    <p class="card-text"><%= order.status %></p>
                  </div>
                  </div>
              </li>
            </ul >
          </div>
  <% end %>
</div>
