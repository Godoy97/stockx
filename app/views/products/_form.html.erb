<%= simple_form_for @product do |f| %>
  <%= f.input :name, required: true%>
  <%= f.input :description, required: true %>
  <%= f.input :price, required: true %>
  <%= f.input :stock, required: true %>
  <%= f.input :brand, required: true %>
  <%= f.input :size, required: true %>
  <%= f.input :color, required: true %>
  <%= f.input :photo, as: :file, required: true %>
  <%= f.button :submit, class: "btn btn-flat" %>
<% end %>
