                <li class="list-unstyled"><%= link_to "43", "/products?query=43", class:"text-decoration-none", style: "color: black" %></li>
                <li class="list-unstyled"><%= link_to "42", "/products?query=42", class:"text-decoration-none", style: "color: black" %></li>
                <li class="list-unstyled"><%= link_to "41", "/products?query=41", class:"text-decoration-none", style: "color: black" %></li>
